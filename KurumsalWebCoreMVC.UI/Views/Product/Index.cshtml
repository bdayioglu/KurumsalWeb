@model KurumsalWebCoreMVC.UI.Models.ProductListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="table-responsive">
    <table class="table table-striped table-bordered ">
        <thead class="thead-dark">
            <tr>
                <th scope="col">No</th>
                <th scope="col">Ürün İsmi</th>
                <th scope="col">Ürün Fiyatı</th>
                <th scope="col">Stok Adeti</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var products in Model.Products)
            {
                <tr>
                    <th scope="row">@products.ProductId</th>
                    <td>@products.ProductName</td>
                    <td>@products.UnitPrice</td>
                    <td>@products.UnitsInStock</td>
                    <td>
                        <a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart"
                           asp-route-productId="@products.ProductId">Kart Ekle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<product-list-pager 
                    current-category="@Model.CurrentCategory"
                    current-page="@Model.CurrentPage"
                    page-size="@Model.PageSize"
                    page-count="@Model.PageCount">
</product-list-pager>

