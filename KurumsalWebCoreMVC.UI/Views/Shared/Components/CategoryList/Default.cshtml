@model KurumsalWebCoreMVC.UI.Models.CategoryListViewModel
@{
    ViewData["Title"] = "Default";
}

@foreach (var item in Model.Categories)
{
    var css = "list-group-item list-group-item-action";
    if (item.CategoryId == Model.CurrentCategory)
    {
        css += "active";
    }
    <a href="/Product/Index?category=@item.CategoryId" class="@css">@item.CategoryName</a>
}


